  APP_WEB_URL: url({ example: `http://localhost:3334` }),
  PAGE_SIZE: num({ example: `10` }),
  NAME_PROJECT: str({ example: `NAME_PROJECT` }),

  STORAGE_MAX_SIZE_MEGABYTES: num({ example: '5' }),
